{{! /event/new }}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1 class="title-post">Update Event</h1>
      <form class="form-style-7" action="/event/update/{{data.id}}" method="POST">
        <div class="col-md-6">
          <ul>
            <li>
              <label for="title">Title</label>
              <input type="text" name="title" value="{{data.title}}" required>
              <span>Title of the event</span>
            </li>
            <li>
              <label for="location">Location/building</label>
              <input type="text" name="location" value="{{data.location}}">
              <span>Location of the event</span>
            </li>
            <li>
              <label for="street">Street</label>
              <input type="text" name="street" value="{{data.street}}" required>
              <span>Street address</span>
            </li>
            <li>
              <label for="city">City</label>
              <input type="text" name="city" value="{{data.city}}" required>
              <span>Enter the city</span>
            </li>
            <li>
              <label for="state">State</label>
              <input type="text" name="state" value="{{data.state}}" required>
              <span>Enter the state</span>
            </li>
            <li>
              <label for="start_date">Start Date</label>
              <input type="date" name="start_date" value="{{data.start_date}}" required>
              <span>Enter the start date</span>
            </li>
            <li>
              <label for="end_date">End Date</label>
              <input type="date" name="end_date" value="{{data.end_date}}" required>
              <span>Enter the end date</span>
            </li>
            <li>
              <label for="description">Event Description</label>
              <textarea rows="8" name="description" value="{{data.description}}" placeholder="Insert information about the event." required>{{data.description}}</textarea>
              <span>Enter the event description</span>
            </li>
            <li>
              <input type="submit" class="submit-btn" value="Submit" required>
            </li>
        </ul>
      </div>
      <div class="col-md-6">
        <ul>
          <li>
            <label for="start_time">Start Time</label>
            <input type="time" name="start_time" value="{{data.start_time}}" required>
            <span>Enter the start time</span>
          </li>
          <li>
            <label for="end_time">End Time</label>
            <input type="time" name="end_time" value="{{data.end_time}}" placeholder="" required>
            <span>Enter the time the event ends</span>
          </li>
          <li>
            <label for="available_positions">Number of Volunteers Desired</label>
            <input type="number" name="available_positions" value="{{data.available_positions}}" placeholder="0" required>
            <span>Enter the number of Volunteers Desired</span>
          </li>
          <li>
            <label for="description">Event Description</label>
            <input type="checkbox" name="event_cause" value="Advocacy & Human Rights">Advocacy & Human Rights<br>
            <input type="checkbox" name="event_cause" value="Animals">Animals<br>
            <input type="checkbox" name="event_cause" value="Arts & Culture">Arts & Culture<br>
            <input type="checkbox" name="event_cause" value="Board Developement">Board Developement<br>
            <input type="checkbox" name="event_cause" value="Children & Youth">Children & Youth<br>
            <input type="checkbox" name="event_cause" value="Community Building">Community Building<br>
            <input type="checkbox" name="event_cause" value="Computers & Technology">Computers & Technology<br>
            <input type="checkbox" name="event_cause" value="Crisis Support">Crisis Support<br>
            <input type="checkbox" name="event_cause" value="Disaster Relief">Disaster Relief<br>
            <input type="checkbox" name="event_cause" value="Education & Literacy">Education & Literacy<br>
            <input type="checkbox" name="event_cause" value="Emergency & Safety">Emergency & Safety<br>
            <input type="checkbox" name="event_cause" value="Employment">Employment<br>
            <input type="checkbox" name="event_cause" value="Environment">Environment<br>
            <input type="checkbox" name="event_cause" value="Faith-Based">Faith-Based<br>
            <input type="checkbox" name="event_cause" value="Health & Medicine">Health & Medicine<br>
            <input type="checkbox" name="event_cause" value="Homelessness & Housing">Homelessness & Housing<br>
            <input type="checkbox" name="event_cause" value="Hunger">Hunger<br>
            <input type="checkbox" name="event_cause" value="Immigration & Refugees">Immigration & Refugees<br>
            <input type="checkbox" name="event_cause" value="International">International<br>
            <input type="checkbox" name="event_cause" value="Justice & Legal">Justice & Legal<br>
            <input type="checkbox" name="event_cause" value="LGBTQIA">LGBTQIA<br>
            <input type="checkbox" name="event_cause" value="Media & Broadcasting">Media & Broadcasting<br>
            <input type="checkbox" name="event_cause" value="People with Disabilities">People with Disabilities<br>
            <input type="checkbox" name="event_cause" value="Politics">Politics<br>
            <input type="checkbox" name="event_cause" value="Race & Ethnicity">Race & Ethnicity<br>
            <input type="checkbox" name="event_cause" value="Seniors">Seniors<br>
            <input type="checkbox" name="event_cause" value="Sports & Recreation">Sports & Recreation<br>
            <input type="checkbox" name="event_cause" value="Veterans & Military Families">Veterans & Military Families<br>
            <input type="checkbox" name="event_cause" value="Women">Women
            <span>Click all that apply</span>
          </li>
          </ul>
        </div>
      </form>
    </div>
  </div>
</div>
