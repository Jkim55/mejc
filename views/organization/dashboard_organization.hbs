<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <h1 style="text-align:center;">Welcome, {{orgData.user_name}} <hr>
      </div>
      <div class="row">
        <h4 class="dashboard">Dashboard</h4>
      </div>
      <div class="row">

        <div class="col-md-4 ">
          <div class="dash-button text-center">
            <a href="/event/new"><button type="button" class="btn btn-primary" id="dropdownMenu1">Create Event</button></a>
          </div>
        </div>

        <div class="col-md-4">
          <div class="dash-button text-center">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Edit Profile <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" id="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><a href="/organization/view/{{orgData.id}}">View Profile</a></li>
              <li><a href="/organization/profile/update/{{orgData.id}}">Edit Profile</a></li>
              <li><a href="/organization/password/update/{{orgData.id}}">Update Password</a></li>
              <li><a href="/organization/username/update/{{orgData.id}}">Update Username</a></li>
              <li><a href="/organization/delete/{{orgData.id}}">Delete Account</a></li>
            </ul>
          </div>
        </div>

        <div class="col-md-4">
          <div class="dash-button text-center">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Search <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" id="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><a href="/organization">by Organizations</a></li>
              <li><a href="/event">by Events</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

