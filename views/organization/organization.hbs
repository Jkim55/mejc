{{! /organization }}

<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<form class="cityInput" action="index.html" method="post">
  <input type="text" name="city" value="city" placeholder="City">
  <input type="submit" name="submit" value="Submit" />
</form>

<div class='container'>
  <div class='row'>
    <div class ='col-md-10'>
      <ul id='organizationList'>
        {{#each data}}
          <li>
            <div>
              <a href='/organization/{{id}}'>
                <h2>{{organization_name}}</h2>
                </a>
              <h3>{{city}}</h3>
          </div>
        {{/each}}
    </div>
  </div>
</div>
