{{! /organization/:id }}

<p>{{data.organization_name}}</p>

<p>About: {{data.about}}</p>

<p>Address: {{data.street}} {{data.city}}, {{data.state}} {{data.zip}}</p>
<p>Website: {{data.website}}</p>
<p>Phone: {{data.phone_number}}</p>

<p>Contact: {{data.contact}}</p>
<p>Email: {{data.email}}</p>


<!-- BUILD OUT THESE ROUTES -->

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row" id="form">
        <form class="city-input" action="index.html" method="post" id="eventForm">
          <input type="submit" name="submit" value="Submit" class="form">
          <input type="text" name="city" value="city" placeholder="City" class="form">
        </form>
        <h1>All Organized Events</h1>
      </div>
      <div class="row">
          {{#each data}}
            <div class="event-list">
              <a href='/event/{{id}}'>
                <h2 class="event-list-names">{{title}}</h2>
              </a>
              <h3 class="event-list-city">{{city}}, {{state}}</h3>
            </div>
          {{/each}}
      </div>
    </div>
  </div>
</div>
