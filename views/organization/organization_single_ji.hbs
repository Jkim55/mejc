{{! /organization/:id }}
<script>
  organization = {{{organization}}}
</script>


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <h1 class="username">{{organizationRender.organization_name}}</h1><hr>
      </div>
      <div class="row">
        <div class="col-md-8" id="users">
          <u>About</u>: {{organizationRender.about}}<br><br>
          <u>Location</u>: {{organizationRender.street}},  {{organizationRender.city}}, {{organizationRender.state}}  {{organizationRender.zip}}<br><br>
          <u>Email</u>: {{organizationRender.email}}<br><br>
          <u>Phone Number</u>: {{organizationRender.phone_number}}<br><br>
          <u>Contact</u>: {{organizationRender.contact}}<br><br>
          <u>Website</u>: {{organizationRender.website}}<br><br>
        </div>
        <div class="col-md-4">
          <div id="map" style="height: 300px;width:auto;"></div>
        </div>
    </div>
  </div>
</div>


<!-- BUILD OUT THESE ROUTES -->

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row" id="form">
        <form class="city-input" action="index.html" method="post" id="eventForm">
          <input type="submit" name="submit" value="Submit" class="form">
          <input type="text" name="city" value="city" placeholder="City" class="form">
        </form>
        <h1>All Organized Events</h1>
      </div>
      <div class="row">
          {{#each events}}
            <div class="event-list">
              <a href='/event/{{id}}'>
                <h2 class="event-list-names">{{title}}</h2>
              </a>
              <h3 class="event-list-city">{{city}}, {{state}}</h3>
            </div>
          {{/each}}
      </div>
    </div>
  </div>
</div>
